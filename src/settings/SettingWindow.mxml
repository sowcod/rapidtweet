<?xml version="1.0" encoding="utf-8"?>
<settingsComp:SettingWindowController xmlns:fx="http://ns.adobe.com/mxml/2009" 
               xmlns:s="library://ns.adobe.com/flex/spark" 
               xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:settingsComp="settings.*"
			   width="400" height="400"
			   showStatusBar = "false"
			   defaultButton="{button_close}">
	<fx:Style source="/style.css" />
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:VGroup id="settingWindow" width="100%" height="100%">
		<mx:TabNavigator width="100%" height="100%">
			<settingsComp:AuthorizationSetting label="Account"/>
			<settingsComp:RefreshSetting label="Refresh" />
		</mx:TabNavigator>
		<s:HGroup width="100%" horizontalAlign="right">
			<s:Button id="button_close" label="閉じる" click="this.close()" />
		</s:HGroup>
	</s:VGroup>
</settingsComp:SettingWindowController>
